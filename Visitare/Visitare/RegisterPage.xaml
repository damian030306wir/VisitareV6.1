<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             BackgroundColor="#FDDA8A"
             x:Class="Visitare.RegisterPage">
    <NavigationPage.TitleView>
        <Label Text="Rejestracja" TextColor="White" FontSize="Title" Margin="20,0"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="40,80,40,0">
                <Entry x:Name="login" Placeholder="Nazwa użytkownika" FontSize="20" PlaceholderColor="Gray"
                   WidthRequest="300" HorizontalTextAlignment="Center"/>
                <Entry x:Name="email" Placeholder="Email" FontSize="20" PlaceholderColor="Gray"
                   WidthRequest="300" HorizontalTextAlignment="Center"/>
                <Entry x:Name="password" Placeholder="Hasło" FontSize="20" IsPassword="True" PlaceholderColor="Gray" 
                   WidthRequest="300" HorizontalTextAlignment="Center"/>
                <Entry x:Name="cpassword" Placeholder="Powtórz Hasło" FontSize="20" IsPassword="True" PlaceholderColor="Gray" 
                   WidthRequest="300" HorizontalTextAlignment="Center"/>
                <Button Text="Zarejestruj" CornerRadius="23" BackgroundColor="#439299" Margin="20" FontAttributes="Bold"
                    Clicked="OnRegisterClicked" TextColor="Black"/>

            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>